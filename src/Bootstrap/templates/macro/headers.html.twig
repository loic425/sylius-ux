{% macro default(header, icon, subheader) %}
	<div class="d-flex flex-column flex-sm-row align-items-center justify-content-center justify-content-md-start">
		{% if icon is not empty %}
			<div class="bg-success bg-opacity-25 d-flex justify-content-center align-items-center rounded-circle" style="min-width: 80px; height: 80px;">
				<i class="fs-2 d-flex bi bi-{{icon}}"></i>
			</div>
		{% endif %}
		<div class="mt-2 mt-sm-0 ms-sm-3 text-center text-sm-start">
			<h1 class="fs-2 mb-0">{{ header }}</h1>
			{% if subheader is not empty %}
				<h2 class="fs-6 f-sans mb-0">{{ subheader }}</h2>
			{% endif %}
		</div>
	</div>
{% endmacro %}
