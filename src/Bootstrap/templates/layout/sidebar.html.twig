<!DOCTYPE html>

<html>
	<head>
		<meta charset="utf-8"/>
		<meta http-equiv="X-UA-Compatible" content="IE=edge"/>

		<title>
			{% block title %}Sylius
			{% endblock %}
		</title>

		<meta content="width=device-width, initial-scale=1, maximum-scale=1, user-scalable=no" name="viewport"/> {% block metatags %}{% endblock %}
		{% block stylesheets %}																																																																																																			      <script src="https://oss.maxcdn.com/html5shiv/3.7.3/html5shiv.min.js"></script>
																																																																																																						      <script src="https://oss.maxcdn.com/respond/1.4.2/respond.min.js"></script>
																																																																																																						    <![endif]-->
		{% endblock %}
	</head>

	<body class="d-flex">
		<div class="dark-theme" id="sidebar">
			<div id="sidebar-wrap">
			<button type="button" id="sidebar-close" class="btn btn-dark" aria-label="Close">
				<i class="text-white bi bi-x-lg"></i>
			</button>
				{% block sidebar %}{% endblock %}
			</div>
		</div>
		<div class="bg-light min-vh-100 d-flex flex-column">
			<div style="z-index: 60" class="d-flex flex-wrap bg-white align-items-start justify-content-between position-sticky top-0 shadow-sm p-2 px-md-4"> {% block topbar %}{% endblock %}</div>
				<div class="p-3 p-md-4 flex-grow-1 d-flex flex-column overflow-hidden" id="wrapper">
						<div id="content">
							{% block flash_messages %}
								{% include '@SyliusUxBootstrap/_flashes.html.twig' %}
							{% endblock %}
							{% block pre_content %}{% endblock %}
							{% block content %}{% endblock %}
							{% block post_content %}{% endblock %}
						</div>

						<small class="mt-auto pt-4 mx-auto text-muted"> {% block footer %}{% endblock %}
							</small>
						</div>
					</div>

					{% include '@SyliusUxBootstrap/modal/_confirmation.html.twig' %}
					{% block javascripts%}{% endblock %}
				</div>
			</div>
		</div>
	</body>
</html>
