{% import '@SyliusSemanticUi/macro/headers.html.twig' as headers %}

<div class="ui stackable two column grid">
    <div class="column">
        {{ headers.default(header|trans, configuration.vars.icon|default('plus'), configuration.vars.subheader|default(null)|trans) }}

        {% include configuration.vars.templates.breadcrumb|default('@SyliusSemanticUi/crud/create/_breadcrumb.html.twig') %}
    </div>
    <div class="middle aligned column">
        {% include configuration.vars.templates.toolbar|default('@SyliusSemanticUi/crud/_toolbar.html.twig') ignore missing %}
    </div>
</div>
